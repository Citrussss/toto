<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.king.todo.ui.home.HomeModel" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:adapter="@{vm.adapter}"
                app:position="@={vm.currentItem}" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:contentPadding="2dp">


                <com.binding.model.view.radio.CheckRadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_normal_height"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:position="@={vm.currentItem}">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_navigation_home"
                        android:gravity="center"
                        android:text="@string/home"
                        android:textSize="@dimen/small_text_size" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_navigation_clock"
                        android:gravity="center"
                        android:text="@string/calendar"
                        android:textSize="@dimen/small_text_size" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_navigation_social"
                        android:gravity="center"
                        android:text="社交"

                        android:textSize="@dimen/small_text_size" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_navigation_mine"
                        android:gravity="center"
                        android:text="我"
                        android:textSize="@dimen/small_text_size" />
                </com.binding.model.view.radio.CheckRadioGroup>

                <android.support.design.widget.BottomNavigationView
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_normal_height"
                    android:orientation="horizontal"
                    app:menu="@menu/home_navigation" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <include layout="@layout/home_drawer_layout" />
    </android.support.v4.widget.DrawerLayout>
</layout>